<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/volume_item_selector"
	android:clickable="true" >

    <ImageView
        android:id="@+id/setThumb"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="fitStart" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
        android:background="#66000000" >

        <View
            android:id="@+id/imageContent"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/setPublished"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/setName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageContent"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="4dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/setPublished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setName"
            android:layout_toRightOf="@+id/imageContent"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setScore"
        android:layout_alignBottom="@+id/setScore"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#66000000" />

    <TextView
        android:id="@+id/setScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:textSize="14sp" />

</RelativeLayout>